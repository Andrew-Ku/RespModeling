<Window x:Class="MyFirstWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пример компоновки" Height="auto">
    <Grid>
        <DockPanel MinHeight="50" MinWidth="50" LastChildFill="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="0" Grid.RowSpan="1" Margin="10,10,22,21" Width="NaN" Height="NaN" Name="dockPanel1">
            <ToolBarTray DockPanel.Dock="Top">
                <ToolBar>
                    <Button Name="NewButton" Click="NewButton_OnClick">New</Button>
                    <Button>Open</Button>
                    <Button>Save</Button>
                    <Button>Help</Button>
                </ToolBar>
            </ToolBarTray>
            <Button Name="button4" DockPanel.Dock="Bottom">I am the right toolbox</Button>
            <StackPanel DockPanel.Dock="Left" Orientation="Vertical" MinWidth="140">
                <Button Content="Button" Width="75"/>
                <Label Content="Label"/>
                <CheckBox Name="StateCheckBox" Content="Состояния" IsChecked="True"/>
                <CheckBox Name="DugiCheckBox"  Content="Дуги"/>
                <CheckBox Name="TestCheckBox"  Content="CheckBox"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Orientation="Vertical" MinWidth="140" HorizontalAlignment="Right">
                <TextBox Name="LogTextBox" Height="200" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.CanContentScroll="True">

                </TextBox>
               <Label Name="MoveFlagLabel" Content="False" MinWidth="30" HorizontalContentAlignment="Center"/>
                <Label Name="MoveXPosLabel" Content="X" MinWidth="30" HorizontalContentAlignment="Center"/>
                <Label Name="MoveYPosLabel" Content="Y" MinWidth="30" HorizontalContentAlignment="Center"/>
            </StackPanel>
            <Canvas Name="WorkPlaceCanvas" Background="#FFC3E6C1" MouseLeftButtonDown="WorkPlaceCanvas_MouseLeftButtonDown" MouseRightButtonDown="WorkPlaceCanvas_MouseRightButtonDown">           

            </Canvas>
        </DockPanel>
    </Grid>
</Window>

